<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/backgroundImg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SegundoActivity">

    <TextView
        android:id="@+id/totalInt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/DataBase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="12dp"
        android:textColor="#514E4E"
        android:visibility="invisible" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@+id/button6"
        android:layout_below="@+id/tablaConteo"
        android:layout_alignStart="@+id/ln"
        android:layout_alignEnd="@+id/ln"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="100dp"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progresbar"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ItemInsertadoA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible" />

            <TextView
                android:id="@+id/SerieInsertadaA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/idMostrarA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/imageView6"
        style="@style/srcQuantumBackground"
        android:layout_width="112dp"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="17dp"
        android:visibility="visible" />

    <EditText
        android:id="@+id/codigoInsertado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ln"
        android:layout_marginStart="6dp"
        android:layout_marginTop="-68dp"
        android:layout_toEndOf="@+id/floatingActionButton"
        android:backgroundTint="#5A5454"
        android:ems="10"
        android:hint="CÓDIGO"
        android:inputType="textPersonName"
        android:shadowColor="#706868"
        android:textColor="#0E0E0E"
        android:textColorHighlight="#7A7575"
        android:textColorHint="#6A6363"
        android:textColorLink="#676161"
        android:textSize="14dp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/codigoInsertado2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/codigoInsertado"
        android:layout_marginStart="6dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/floatingActionButton"
        android:backgroundTint="#5A5454"
        android:ems="10"
        android:hint="IDENTIFICACIÓN"
        android:inputType="textPersonName"
        android:shadowColor="#706868"
        android:textColor="#0E0E0E"
        android:textColorHighlight="#7A7575"
        android:textColorHint="#6A6363"
        android:textColorLink="#676161"
        android:textSize="14dp"
        android:visibility="invisible" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/qtm2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="9dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/colorQuantum"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tablaConteo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:fillViewport="true"
        android:scrollbars="horizontal|vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="60dp"
                    android:layout_height="28dp"
                    android:background="@drawable/ic_borde4"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="  CÓDIGO"
                    android:textColor="@color/colorQuantum"
                    android:textSize="8sp" />

                <Space
                    android:layout_width="4dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_borde4"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="  IDENTIFIC."
                    android:textColor="@color/colorQuantum"
                    android:textSize="8sp"
                    android:textStyle="normal" />


                <Space
                    android:layout_width="4dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_borde4"
                    android:fontFamily="@font/roboto"
                    android:gravity="center|center_horizontal"
                    android:text="  UBIC."
                    android:textColor="@color/colorQuantum"
                    android:textSize="8sp"
                    android:textStyle="normal" />

                <Space
                    android:layout_width="4dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_borde4"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="CANT."
                    android:textColor="@color/colorQuantum"
                    android:textSize="8sp"
                    android:textStyle="normal" />

                <Space
                    android:layout_width="7dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_borde4"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="RESULTADO"
                    android:textColor="@color/colorQuantum"
                    android:textSize="8sp"
                    android:textStyle="normal" />

            </TableRow>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ln"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/button6"
        android:layout_below="@+id/scrollView2"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listaContactos"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginEnd="0dp">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ln"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-68dp"
        android:clickable="true"
        android:onClick="agregarItem"
        android:visibility="invisible"
        app:backgroundTint="#D4145A"
        app:srcCompat="@drawable/ic_baseline_add_circle_24" />

    <Button
        android:id="@+id/finalizar"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/custom_button3"
        android:fontFamily="@font/roboto"
        android:onClick="Salir"
        android:text="Finalizar"
        android:textSize="12sp"
        android:visibility="invisible" />

    <TableLayout
        android:id="@+id/tablaConteo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/ic_borde2">

        <TableRow
            android:id="@+id/columnaConteo"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/conteo"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="@drawable/custom_button"
                android:fontFamily="@font/roboto"
                android:foregroundGravity="center"
                android:gravity="center"
                android:hint="conteo"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/roboto"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="Número de Conteo"
                android:textColor="@color/colorQuantum"
                android:textSize="17dp" />

            <Space
                android:layout_width="14dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/button7"
                style="@style/flechaRosa"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_loop_24"
                android:gravity="center"
                android:onClick="actualizar" />

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:foregroundGravity="center"
                android:gravity="center"
                android:hint="0"
                android:textColor="@color/colorQuantum"
                android:textColorHint="@color/colorQuantum"
                android:textSize="10dp" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/limpiarTodo"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/ic_borde2"
        android:text="Limpiar"
        android:textColor="@color/colorQuantumLila" />

    <Button
        android:id="@+id/colectar"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/custom_button3"
        android:onClick="colectar"
        android:text="COLECTAR" />

    <Button
        android:id="@+id/button6"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:background="@drawable/ic_borde2"
        android:onClick="enviar"
        android:text="enviar"
        android:textColor="@color/colorQuantumLila" />

</RelativeLayout>