<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/backgroundImg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarActivity">

    <CheckBox
        android:id="@+id/handCheck"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/viewNombre2"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="1dp"
        android:layout_toEndOf="@+id/serieIn"
        android:background="@drawable/ic_borde4"
        android:button="@drawable/image_checkbox"
        android:foregroundGravity="center"
        android:gravity="center"
        android:textSize="1sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imageView7"
        style="@style/srcQuantumBackground"
        android:layout_width="112dp"
        android:layout_height="124dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="17dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/colectado2"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cant"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/ic_borde4"
        android:gravity="center"
        android:hint="Último escaneado"
        android:inputType="textPersonName"
        android:textColor="@color/textColor"
        android:textColorHint="@color/colorQuantum" />

    <TextView
        android:id="@+id/qrInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/button5"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/colectado2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/ic_borde2"
        android:onClick="Salir"
        android:text="VOLVER"
        android:textColor="@color/colorQuantumLila"
        android:textSize="12sp" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/qtm4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="9dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/colorQuantum"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TableLayout
        android:id="@+id/tablaConteo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/ic_borde2">

        <TableRow
            android:id="@+id/columnaConteo"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/conteoC"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:background="@drawable/custom_button"
                android:fontFamily="@font/roboto"
                android:foregroundGravity="center"
                android:gravity="center"
                android:hint="conteo"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/roboto"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="Número de Conteo"
                android:textColor="@color/colorQuantum"
                android:textSize="17dp" />

            <CheckBox
                android:id="@+id/formato"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="-5dp"
                android:background="@drawable/ic_borde4"
                android:button="@drawable/image_checkbox"
                android:foregroundGravity="center"
                android:gravity="center"
                android:textSize="1sp"
                android:visibility="invisible" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/viewNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/colectado"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="CÓDIGO"
        android:textColor="@color/colorQuantum"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/itenIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewNombre"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="43dp"
        android:background="@drawable/ic_borde4"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textColor="@color/textColor"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/viewNombre2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/itenIn"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="IDENTIFICACIÓN"
        android:textColor="@color/colorQuantum"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/viewNombre4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ubicacionA"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="CANTIDAD"
        android:textColor="@color/colorQuantum"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/viewNombre5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/serieIn"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="UBICACIÓN"
        android:textColor="@color/colorQuantum"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/serieIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewNombre2"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/qrImage2"
        android:background="@drawable/ic_borde4"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textColor="@color/textColor"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/cant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewNombre4"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/ic_borde4"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="1"
        android:textColor="@color/textColor"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/colectado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tablaConteo"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/btOK"
        android:background="@drawable/ic_borde4"
        android:gravity="center"
        android:hint="Escanear acá"
        android:inputType="textPersonName"
        android:textColor="@color/textColor"
        android:textColorHint="#9C27B0"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/ubicacionA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewNombre5"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/ic_borde4"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textColor="@color/textColor"
        android:textSize="12sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/colectado2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_button3"
        android:onClick="agregar"
        android:text="Colectar"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/idMos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/serieIn"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="23dp"
        android:textColor="#918A8A" />

    <Button
        android:id="@+id/qrImage"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-15dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/button4"
        android:background="@drawable/ic_baseline_qr_code_scanner_24"
        android:foregroundGravity="clip_horizontal"
        android:gravity="center_horizontal"
        android:onClick="scan" />

    <Button
        android:id="@+id/qrImage2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/viewNombre2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp"
        android:background="@drawable/ic_baseline_qr_code_scanner_24"
        android:onClick="scan2"
        android:visibility="invisible"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/btOK"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tablaConteo"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/custom_button"
        android:onClick="ok"
        android:text="ok"
        android:visibility="invisible" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

</RelativeLayout>