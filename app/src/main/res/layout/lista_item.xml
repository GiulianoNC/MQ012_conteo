<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/subrayado"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/IDtext"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:hint="id"
            android:textColor="#5C5757"
            android:textColorHighlight="#989292"
            android:textColorHint="#474343"
            android:textSize="10sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/viewItem"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto"
            android:gravity="center|start"
            android:textColor="#837E87"
            android:textSize="8sp"
            android:textStyle="normal" />


        <Space
            android:layout_width="14dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/viewNroSerie"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto"
            android:gravity="center|start"
            android:textColor="#837E87"
            android:textSize="8sp" />

        <Space
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/viewUbicacion"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto"
            android:gravity="center|start"
            android:textColor="#837E87"
            android:textSize="8sp" />

        <Space
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/viewCantida"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto"
            android:gravity="center|start"
            android:textColor="#837E87"
            android:textSize="8sp" />

        <Space
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/viewResultado"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:textColor="#837E87"
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>